@model CarInsurance.Models.Insuree

@{
    ViewBag.Title = "Create";
}

<!-- Main container for the form -->
<div class="row no-gutters m-3">
    <!-- Center-aligned card for the form -->
    <div class="card col-sm-12 col-md-10 col-lg-8 mx-auto shadow">
        <!-- Card header -->
        <div class="card-header text-center">
            <h5 class="m-0">Create Insurance Form</h5>
        </div>
        
        
        <!-- Card body containing the form -->
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row no-gutters">

                    <!-- Displays validation summary for any form-level errors -->
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <!-- First Name Input -->
                    <div class="form-group col-md-12">
                        <label for="FirstName" class="control-label col-md-2">First Name</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <!-- Last Name Input -->
                    <div class="form-group col-md-12">
                        <label for="LastName" class="control-label col-md-2">Last Name</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <!-- Email Address Input -->
                    <div class="form-group col-md-12">
                        <label for="EmailAddress" class="control-label col-md-2">Email Address</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Email Address" } })
                            @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <!-- Date of Birth Input -->
                    <div class="form-group col-md-12">
                        <label for="DateOfBirth" class="control-label col-md-2">Date Of Birth</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", placeholder = "Date of Birth" } })
                            @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <!-- Car Year Input -->
                    <div class="form-group col-md-12">
                        <label for="CarYear" class="control-label col-md-2">Car Year</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CarYear, new { htmlAttributes = new { @class = "form-control", placeholder = "Car year" } })
                            @Html.ValidationMessageFor(model => model.CarYear, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <!-- Car Make Input -->
                    <div class="form-group col-md-12">
                        <label for="CarMake" class="control-label col-md-2">Car Make</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CarMake, new { htmlAttributes = new { @class = "form-control", placeholder = "Car Make" } })
                            @Html.ValidationMessageFor(model => model.CarMake, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Car Model Input -->
                    <div class="form-group col-md-12">
                        <label for="CarModel" class="control-label col-md-2">Car Model</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CarModel, new { htmlAttributes = new { @class = "form-control", placeholder = "Car Model" } })
                            @Html.ValidationMessageFor(model => model.CarModel, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <!-- DUI Checkbox -->
                    <div class="form-group col-md-12">
                        <label for="DUI" class="control-label col-md-2">DUI</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.DUI)
                                @Html.ValidationMessageFor(model => model.DUI, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <!-- Speeding Tickets Input -->
                    <div class="form-group col-md-12">
                        <label for="SpeedingTickets" class="control-label col-md-2">
                            Speeding Tickets
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SpeedingTickets, new { htmlAttributes = new { @class = "form-control", placeholder = "Speeding Tickets" } })
                            @Html.ValidationMessageFor(model => model.SpeedingTickets, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <!-- Coverage Type Checkbox -->
                    <div class="form-group col-md-12">
                        <label for="CoverageType" class="control-label col-md-2">Coverage Type</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.CoverageType)
                                @Html.ValidationMessageFor(model => model.CoverageType, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Buttons for navigation and submission -->
                <p class="text-center">
                    @Html.ActionLink("Back to Insuree Page", "Index", null, new { @class = "btn btn-primary" })
                    <button class="btn btn-primary" type="submit" style="background-color: green">
                        Save
                    </button>
                </p>

            }

        </div>

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
