@model CarInsurance.Models.Insuree


@*Set the title of the page in the ViewBag*@
@{
    ViewBag.Title = "Delete";
}

@*Main container for the form*@
<div class="frame">
    <div class="details-content">

        <!-- Page heading -->
        <h4 class="text-center">Client Insurance Form Details</h4>
        <h3 class="text-center" style="color:red">Are you sure you want to delete this?</h3>
        <hr />

        <!-- Display the details of the Insuree in a list format -->
        <dl class="dl-horizontal">
            <!-- First Name -->
            <dt>@Html.DisplayNameFor(model => model.FirstName)</dt>
            <dd>@Html.DisplayFor(model => model.FirstName)</dd>

            <!-- Last Name -->
            <dt>@Html.DisplayNameFor(model => model.LastName)</dt>
            <dd>@Html.DisplayFor(model => model.LastName)</dd>

            <!-- Email Address -->
            <dt>@Html.DisplayNameFor(model => model.EmailAddress)</dt>
            <dd>@Html.DisplayFor(model => model.EmailAddress)</dd>

            <!-- Date of Birth -->
            <dt>@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
            <dd>@Html.DisplayFor(model => model.DateOfBirth)</dd>

            <!-- Car Year -->
            <dt>@Html.DisplayNameFor(model => model.CarYear)</dt>
            <dd>@Html.DisplayFor(model => model.CarYear)</dd>

            <!-- Car Make -->
            <dt>@Html.DisplayNameFor(model => model.CarMake)</dt>
            <dd>@Html.DisplayFor(model => model.CarMake)</dd>

            <!-- Car Model -->
            <dt>@Html.DisplayNameFor(model => model.CarModel)</dt>
            <dd>@Html.DisplayFor(model => model.CarModel)</dd>

            
        </dl>
    </div>
</div>

<!-- Form for confirming the delete action -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Buttons for navigation and confirmation -->
    <p class="text-center">
        @Html.ActionLink("Back to Client Page", "Index", null, new { @class = "btn btn-primary" })
        <button type="submit" class="btn btn-primary" style="background-color: red; color: black;">Delete</button>
    </p>
}









